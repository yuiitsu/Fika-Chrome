@import '../variables.styl'

$heading($base)
  $rank = 1.5 1.25 1.1 1 0.9 0.83
  for $i in (1..6)
    h{$i}
      font-size: round($base*$rank[$i - 1])
      line-height: 1.3;

  p
  li
  code
  table
  blockquote
    font-size: $base

  pre
    code
    span
      font-size: round($base*0.75)


.fika-app
  .size-small
    &.fika-article
      max-width: 690px
    .fika-title
      font-size:32px
    .fika-content
      $heading(17px)
      font-size: 17px


  .size-medium
    .fika-title
      font-size:40px
    .fika-content
      $heading(21px)
      font-size: 21px

  .size-large
    .fika-title
      font-size:48px
    .fika-content
      $heading(26px)
      font-size: 26px